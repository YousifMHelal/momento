{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",  // Make sure this is set to the root of your project
    "paths": {
      "@/*": ["src/*"]  // This sets up the alias for TypeScript
    }
  },
  "include": ["src"],  // Include the source directory
  "exclude": ["node_modules", "dist"]  // Exclude the build output and node_modules
}
